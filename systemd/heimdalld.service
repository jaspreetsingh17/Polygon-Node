[Unit]
Description=Heimdall Daemon
Documentation=https://wiki.polygon.technology
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=polygon
Group=polygon

ExecStart=/home/polygon/go/bin/heimdalld start --home /var/lib/polygon/heimdall
ExecStop=/bin/kill -s SIGTERM $MAINPID

Restart=on-failure
RestartSec=10
LimitNOFILE=65535

StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
